# Database Configuration
DATABASE_URL=sqlite:///./gridx.db
# For PostgreSQL: postgresql://username:password@localhost:5432/gridx

# API Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SCADA Configuration
SCADA_ENABLED=false
OPC_UA_ENDPOINT=opc.tcp://localhost:4840

# ML Model Configuration
MODEL_PATH=app/ml_models/trained
MAX_UPLOAD_SIZE=104857600

# Environment
ENVIRONMENT=development
DEBUG=true

# GridX dataset configuration
# Copy this file to `.env` and adjust the paths for your environment.

# Optional base directory for all other paths (defaults to the repository root)
GRIDX_BASE_DIR=.

# Root directory for data artifacts (defaults to <repo>/data)
GRIDX_DATA_ROOT=data

# IEEE fault detection dataset (supports absolute or relative paths)
GRIDX_IEEE_DATA_PATH=data/raw/ieee_fault_detection

# ETT operational dataset (supports absolute or relative paths)
GRIDX_ETT_DATA_PATH=data/raw/ett_small

# Locations where processed/intermediate data will be stored
GRIDX_PROCESSED_DATA_PATH=data/processed
GRIDX_MODEL_DATA_PATH=data/interim
